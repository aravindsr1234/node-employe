<!-- EDIT MODAL -->
<button id="edit_modal_btn">edit button</button>
    <div class="edit_modal_bg">
        <div class="add_modal">
            <div class="modal_container">
                <div class="add_modal_header">
                    <h3>Edit Employee</h3>
                    <div class="add_modal_header_action">
                        <button class="editclose"><i class="fa fa-close"></i></button>
                    </div>
                </div>
                <div class="add_modal_content">
                    <form method="POST" id="update_user">
                        <div class="card card_none">
                            <!-- <input class="form-control fileup" type="file" id="formFile">
                            <div class="upload">
                                <i class="fa-solid fa-file-arrow-up upload_icon"></i>
                                <h6 class="text-primary">Upload Image</h6>
                                <h6 class="png">PNG, JPG files are allowed</h6>
                            </div> -->
                        </div>
                        <div class="row col_3">
                            <div class="salutation">
                                <label for="salutation_edit" class="form-label ">Salutation</label>
                                <select class="dropdown" id="salutation_edit" name="salutation_edit" required>
                                    <option  value="mr">Mr</option>
                                    <option value="mrs">Mrs</option>
                                    <option value="dr">Dr</option>
                                    <option value="adv">Adv</option>
                                    <option value="adv">Other</option>
                                </select>
                            </div>
                            <div class="firstname">
                                <label for="fname_edit" class="form-label">First Name</label>
                                <input type="text" class="form-control" value="" id="fname_edit" name="fname_edit" placeholder="john" required>
                            </div>
                            <div class="lastname">
                                <label for="lastName_edit" class="form-label">Last Name</label>
                                <input type="text" class="form-control" id="lastName_edit" name="lastName_edit" placeholder="doe" required>                                
                            </div>
                        </div>
                        <div class="row col_2">
                            <div class="email">
                                <label for="email_edit" class="form-label">Email Address</label>
                                <input type="Email" class="form-control col_2_width" id="email_edit" name="email_edit" placeholder="mail@simple.com" required>
                            </div>
                            <div class="mobile">
                                <label for="number_edit" class="form-label">Mobile Number</label>
                                <input type="number" class="form-control col_2_width" id="number_edit" name="number_edit" placeholder="enter mobile number" required>
                            </div>
                        </div>
                        <div class="row col_2">
                            <div class="dob">
                                <label for="dob_edit" class="form-label">DOB</label>
                                <input type="date" class="form-control" id="dob_edit" name="dob_edit" placeholder="select date of birth" required>
                            </div>
                            <div class="gender">
                                <h5>Gender:</h5>
                                <label for="male">Male</label>
                                <input type="radio" name="gender" id="male" value="male" checked required>
                                <label for="female">Female</label>
                                <input type="radio" name="gender" id="female" value="female">
                            </div>
                        </div>
                        <div class="row col">
                                <label for="qualification_edit" class="form-label">Qualification</label>
                                <input type="text" class="form-control col_100" id="qualification_edit" name="qualification_edit" placeholder="enter qualifications">                                 
                        </div>
                        <div class="row col">
                            <label for="address_edit" class="form-label">Address</label>
                            <input type="text" class="form-control col_100" id="address_edit" name="address_edit" placeholder="enter address" required>
                        </div>
                        <div class="row col_2">
                            <div class="country">
                                <label for="country_edit" class="form-label ">Country</label> 
                                <select class="dropdown col_2_width" id="country_edit" name="country_edit" required>
                                     <option  value="india">india</option>
                                     <option value="France">France</option>
                                     <option value="Australia">Australia</option>
                                </select>          
                            </div>
                            <div class="state">
                                <label for="state_edit" class="form-label col_2_width">State</label>
                                <select class="dropdown col_2_width" id="state_edit" name="state_edit" required>
                                    <option  value="kerala">kerala</option>
                                    <option value="tamilnadu">tamilnadu</option>
                                    <option value="delhi">delhi</option>
                                </select>
                            </div>
                        </div>
                        <div class="row col_2">
                            <div class="city">
                                <label for="city_edit" class="form-label">City</label>
                                <select class="dropdown col_2_width" id="city_edit" name="city_edit" required>
                                    <option  value="tvm">tvm</option>
                                        <option value="ernakulam">ernakulam</option>
                                  </select>
                            </div>
                            <div class="zip">
                                <label for="Pin/Zip" class="form-label">Pin/Zip</label required>
                                <input type="text" id="city" class="form-control col_2_width"placeholder="Pin/Zip" />
                            </div>
                        </div>
                        <div class="add_modal_footer">
                            <div class="add_modal_footer_actions">
                                <!-- <button class="  editclose">Cancel</button> -->
                                <button type="submit" id="success" class="button_color  button_primary editclose">Save Changes</button>
                            </div>
                        </div>
                    </form>
                </div>
                
            </div>
            <!-- <span class="modal_close">x</span> -->
        </div>
    </div>
<!-- /EDIT MODAL -->